---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import white_hero_logo from '/images/white_hero_logo.png';
import sachet from '/images/sachet.png';
import pinkHeart from '/images/pinkHeart.png';
import workers_1 from '/images/workers_1.png';
import workers_2 from '/images/workers_2.png';
import workers_3 from '/images/workers_3.png';
import workers_4 from '/images/workers_4.png';

const emailAddress = 'hello@madebymum.me'
---

<!-- p-3 = 12px 
p-4 = 16px
p-6 = 24px 
p-9 = 36px
p-12 = 48px -->


<!-- 
'lgMobile': '500px',
'tablet': '640px',
'laptop': '1024px',
'desktop': '1280px', -->

<!-- Pink - e4bdb2
Med green- 366656
Teal - b9d1cc
Light teal - d2e5d9
Navy -263c44 -->

<Layout title="made by Mum">
	<main class='w-full'>
		<section  id='hero' 
				class="bg-hero 
				px-6 pb-9 mt-0 
				h-min
				laptop:bg-cover
					" >
			<div id='logo'class="
				flex justify-center items-start
				w-full h-20 pt-3 
				lgMobile:h-24
				tablet:h-32 tablet: pt-6 
				laptop:h-36
				">
				<img src={white_hero_logo} alt="white_hero_logo " class="h-full"
					/>
			</div>

			<div id='hero-content' class="
				max-w-4/5 mt-6
				grid
				grid-rows-[min_auto_min]
				grid-cols-[auto_auto]

				lgMobile:grid-cols-[minmax(175px,_1fr)_2fr]
				tablet:grid-rows-[min_min_auto]
				middle:max-h-[400px] middle:grid-rows-[1fr_1fr_2fr]
				
				laptop:max-h-[500px] laptop:mt-16 
				laptop:grid-cols-[362px_auto] 
				laptop:grid-rows-[1fr_1fr_2fr]

				">
	
				<img src={sachet} alt="sachet" 
				class=" 
					object-contain
					hidden 
					lgMobile:block lgMobile:row-span-3 
				" />

				<div class='flex 
					w-full
					col-span-2
					lgMobile:col-span-1 lgMobile:items-start 
					middle:self-end
				'>

					<h1 class="
					pb-3
						text-dynamic text-white tracking-widest leading-[1.15] break-words font-bold
						tablet:mt-3  
						laptop:mt-14 laptop:ml-3
						
						">
						Freeze Dried with
					</h1> 
					
					<div class="
						max-w-[80px]
						lgMobile:max-w-[100px]
						middle:max-w-[115px]
						laptop:max-w-[134px] 
					">

						<img src={pinkHeart} alt="white_hero_logo " 
						class="
						min-w-0 w-full h-auto 
						lgMobile:mt-3  
						 laptop:justify-self-end laptop:self-center
						" />
					</div>

				</div>
					
				<div class="text-[#D2E5D9] text-md whitespace-normal text-clip
					col-span-2 min-w-min max-w-[550px] 
					mt-0 pb-3
					lgMobile:col-start-2 lgMobile:col-span-1 lgMobile:row-start-2
				 	middle:text-lg middle:max-w-[592px] 
					laptop:text-xl laptop:font-semibold laptop:leading-8 
						laptop:mt-0 laptop:ml-3
				">
					Your breast milk or your baby food!  Simply add water to reconstitute. 
					Take it anywhere or give it family members or child-care, so that your baby can 
					always have the very best!  
				</div>

				<div class="
					col-span-2
					w-4/5 m-auto mt-6 mb-0
					lgMobile:max-w-[400px] 
					tablet:max-w-[350px]
						tablet:col-span-1 tablet:ml-0  
					laptop:ml-3
				">
					<a href={`mailto:${emailAddress}`}  >
						<button  type="button" 
						class="button bg-[#A1E7D8] rounded-sm
						w-full				px-6 py-3 	
						drop-shadow-2xl
						font-semibold text-[#123A31] text-base tracking-wider
						hover:bg-[#80CBBD]  active:bg-[#5DB1A5] 
						
						
						" 
						>{emailAddress}</button>
					</a>
				</div>
				<!-- </div> -->
			</div>
		</section>

		<section id='under-construction' 
			class=" bg-[url('/images/UC_Bg.png')] bg-auto bg-bottom
				flex flex-col
				tablet:flex-row tablet:justify-between tablet:h-[450px] tablet:content-end tablet:items-end
				tablet:pl-3
				middle:pl-6 middle:justify-end
				laptop:h-[550px]
				">
			<div id='UC-text' 
					class="flex flex-col justify-center 
					
					pt-0 mt-0
					tablet:mt-0 tablet:h-full tablet:justify-center 
					lgMobile:mt-0
					laptop:mt-0 laptop:justify-start  laptop:ml-12
					">
				
				<h3 class="font-bold text-2xl 
						text-[#4B2004] text-center m-auto mt-9
						whitespace-normal
						tracking-wider
						lgMobile:text-3xl
						tablet:text-3xl tablet:mt-0 tablet:mb-0
						middle:text-4xl
						laptop:text-5xl laptop:mb-0 laptop:mt-20
						">
						Our New Webiste is...</h3>
				<h2 class="
					m-auto 
					whitespace-normal
					text-[#4B2004] text-center font-extrabold text-3xl 
					lgMobile:text-4xl
					tablet:text-4xl  
					tablet:mt-3 tablet:mb-0
					middle:text-5xl
					laptop:text-6xl laptop:font-extrabold laptop:mt-5 laptop:m-auto laptop:mb-0
				">Under Construction</h2>	
				<h4 class="font-medium text-base  text-[#92552D] text-center
					mt-6 mx-3 
					lgMobile:mt-6 lgMobile:text-lg
					tablet:text-lg tablet:mt-12
					middle:text-xl
					laptop:text-2xl laptop:mt-30

					" >
						To Conact made by Mum, please email Kym at <br> 
				</h4>
				<span class="font-bold text-base text-[#864201] text-center
					mt-0
					lgMobile:text-xl
					tablet:text-xl tablet:mt-3
					middle:text-2xl
					laptop:mt-3
				
				" ><a href={`mailto:${emailAddress}`} class="hover:underline" >{emailAddress}</a></span>
			</div>
				
			<div  class="self-end">
				<img src={workers_1} alt='construction workers ' 
				class="max-w-[350px] 
				mt-3
				float-right
				tablet:self-end
				middle:max-w-[450px]
				laptop:max-w-min
				"/>
			</div>
		</section>

		<section id='discussion-1' class="
		bg-white bg-[url('/images/pilon.png')] bg-no-repeat bg-left-bottom
			pt-9 px-12 pb-28 mt-0
			text-center
			tablet:p-24
			" >

			<div class="text-[#979AAB] tracking-wide">THIS IS MADE BY MUM</div>
			
			<div>
				<h2 class="text-[#2C2F30] font-normal text-3xl lgMobile:text-5xl 
				mt-6 m-auto
				">Baby Food Reimagined.</h2>
			</div>
			<div  class="text-[#48575e] font-normal text-base lgMobile:text-xl lgMobile:text-[#62777F]
			mt-9
			max-w-[800px] mx-auto
			">
				<p class="">Made by Mum is a Freeze Dry service for your own Breast Milk. 
					Freeze dried and processed into 4 oz packages, your breast milk is easily reconstituted by simply 
					adding the specified amount of water.<br/><br/>
					The same process can also be used to freeze dry any baby food you 
					make and would like to keep safe and portable for years.
				</p>
			</div>



		</section>

		<section id="workers-gallery" class="">
			<div class="flex items-end bg-white">
				<img src={workers_2} alt="workers_2" class="min-w-0 w-full h-auto hidden tablet:block"/>
				<img src={workers_3} alt="workers_2" class="min-w-0 w-full h-auto"/>
				<img src={workers_4} alt="workers_2" class="min-w-0 w-full h-auto hidden laptop:block"/>
			</div>
		</section>

		
	</main>
	<Footer email={emailAddress}></Footer>	
</Layout>

<style>
	*, h1, h2, h3, h4, h5, h6{
		padding: 0;
	}
	main {
		margin: auto;
		min-width: 350px ;
		font-family: 'Plus Jakarta Sans', sans-serif;
	}
	h1, h3 {
		font-weight: 400;
		font-family: 'Oleo Script', cursive;
	}

</style>
